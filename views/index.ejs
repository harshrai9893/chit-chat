<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chats</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="page">
    <h2 class="title"> All Chats</h2>

    <a href="/chats/new" class="btn new-btn">+ New Chat</a>

    <% for(let chat of chats){ %>
        <div class="chat-card">

            <div class="chat-header">
                <span class="from"><%= chat.from %></span>
                <span class="time">
                    <%= chat.created_at.toString().slice(0, 21) %>
                </span>
            </div>

            <div class="chat-msg">
                <%= chat.msg %>
            </div>

            <div class="chat-footer">
                <span class="to">To: <%= chat.to %></span>

                <div class="actions">
                    <a href="/chats/<%= chat._id %>/edit" class="btn edit-btn">Edit</a>

                    <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                        <button class="btn delete-btn">Delete</button>
                    </form>
                </div>
            </div>

        </div>
    <% } %>
</div>

</body>
</html>
